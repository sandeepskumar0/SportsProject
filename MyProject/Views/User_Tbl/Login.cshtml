@model MyProject.Models.User_Tbl

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="about">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="index.html">Home</a></li>
            <li class="active">About</li>
        </ol>
        <h2>Login Here</h2>
        <div class="about-head">
            <p>
                The College Sports Club is a dynamic community within our academic institution, dedicated to promoting physical fitness, teamwork, and a passion for sports. We offer a diverse range of athletic activities, fostering a supportive environment for students to engage, excel, and build lifelong connections. Join the club, where sportsmanship meets camaraderie, shaping well-rounded individuals for a successful journey ahead!
            </p>
        </div>

        @using (Html.BeginForm("Login", "User_Tbl", new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="container">
                <h2 class="text-center">Enter Details | Member</h2>
                <hr />
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }



                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.User_Email, "Enter Your Email", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.User_Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your email" } })
                        @Html.ValidationMessageFor(model => model.User_Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br /><br />
                <div class="form-group">
                    @Html.LabelFor(model => model.User_Password, "Enter Your Password", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.User_Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your password", type = "password" } })
                        @Html.ValidationMessageFor(model => model.User_Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-outline-success">Login</button>
                    </div>

                </div>
            </div>
            <br /><br />
            <center> <a href="@Url.Action("Signup","User_Tbl")">Click Here to SignUp !</a></center>
        }
    </div>
</div>