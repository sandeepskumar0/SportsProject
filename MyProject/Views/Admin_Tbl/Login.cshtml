@model MyProject.Models.Admin_Tbl

@{
    Layout = null;
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <div class="about">
        <div class="container">
            <br /><br />
            <h2>COLLEGE SPORTSCLUB | ADMIN</h2>
            <div class="about-head">
                <p>
                    The College Sports Club is a dynamic community within our academic institution, dedicated to promoting physical fitness, teamwork, and a passion for sports. We offer a diverse range of athletic activities, fostering a supportive environment for students to engage, excel, and build lifelong connections. Join the club, where sportsmanship meets camaraderie, shaping well-rounded individuals for a successful journey ahead!
                </p>
            </div>
            </div>
        </div>
            @using (Html.BeginForm("Login", "Admin_Tbl", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                <div class="container">
                    <h4 class="mt-5 mb-4">LOGIN | ADMIN </h4>
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            @ViewBag.ErrorMessage
                        </div>
                    }
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Admin_Username, "Admin Email", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Admin_Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Admin_Username, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Admin_Password, "Admin Password", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Admin_Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })

                            @Html.ValidationMessageFor(model => model.Admin_Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-10 offset-md-2">
                            <button type="submit" class="btn btn-outline-success">Submit</button>
                        </div>
                    </div>
                </div>


                <center> <a href="@Url.Action("Index","Home")">Back to Website</a></center>
            }
</body>
</html>
