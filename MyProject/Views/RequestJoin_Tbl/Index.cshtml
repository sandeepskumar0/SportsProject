@model IEnumerable<MyProject.Models.RequestJoin_Tbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage1.cshtml";
}

<h2>Members Request to Join</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Req_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Req_Dept)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Req_Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category_Tbl.Cat_Name)
                </th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Req_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Req_Dept)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Req_Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category_Tbl.Cat_Name)
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            @Html.ActionLink("Details", "Details", new { id = item.Req_Id }, new { @class = "btn btn-info btn-sm" }) | 
                            @Html.ActionLink("Delete", "Delete", new { id = item.Req_Id }, new { @class = "btn btn-danger btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
